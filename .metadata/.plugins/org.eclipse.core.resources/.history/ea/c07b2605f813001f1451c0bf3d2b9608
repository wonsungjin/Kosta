package com.kosta.sample.board;

import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.PreparedStatement;
import java.sql.ResultSet;
import java.sql.SQLException;
import java.util.ArrayList;

import com.kosta.sample.json.EmpVO;

public class Board {
	static final String DB_URL = "jdbc:oracle:thin:@127.0.0.1:1521:XE";
	static final String DB_ID = "it";
	static final String DB_PW = "0000";

	
	
	
	public ArrayList<EmpVO> boardSelect()
	{
		Connection conn = null;
		PreparedStatement pstmt = null;
		ResultSet rs = null;
		ArrayList<EmpVO> list=null;
		String sql = "select * from emp";
		try
		{
			conn = oracleConn();
			pstmt = conn.prepareStatement(sql);
			rs = pstmt.executeQuery();
			list = new ArrayList();
			while(rs.next()==true)
			{
				EmpVO emp = new EmpVO();
				emp.setEname(rs.getString("ename"));
				emp.setEmpno(rs.getInt("empno"));
				list.add(emp);
			}
		} 
		catch (SQLException e)
		{
			e.printStackTrace();
		}
		finally
		{
			oracleClose(conn,pstmt,rs);
		}
		return list;
	}
	
	public int boardDelete(int empno)
	{
		Connection conn = null;
		PreparedStatement pstmt = null;
		int delCount=0;
		try {
			conn = oracleConn();
			String sql = "delete from emp where empno="+empno;
			pstmt = conn.prepareStatement(sql);
			delCount =  pstmt.executeUpdate("empno");
		} catch (SQLException e) {
			e.printStackTrace();
		}finally
		{
			oracleClose(conn,pstmt);
		}
		return 
		
	}
	
	public Connection oracleConn()
	{
		Connection conn = null;
		try 
		{
			Class.forName("oracle.jdbc.driver.OracleDriver");
		} 
		catch (ClassNotFoundException e)
		{
			e.printStackTrace();
		}
	
			try {
				conn = DriverManager.getConnection(DB_URL,DB_ID,DB_PW);
			} catch (SQLException e) {
				
				e.printStackTrace();
			}
			if(conn!=null) System.out.print("연결됨");
			else System.out.print("연결ss");
			return conn;
	}
	
	public void oracleClose(Connection conn,
	PreparedStatement pstmt,
	ResultSet rs)
	{
		try {
			rs.close();
			pstmt.close();
			conn.close();
		} catch (SQLException e) {
			
			e.printStackTrace();
		}
	
	}
	public void oracleClose(Connection conn,
			PreparedStatement pstmt)
			{
				try {
					pstmt.close();
					conn.close();
				} catch (SQLException e) {
					
					e.printStackTrace();
				}
			
			}
}
